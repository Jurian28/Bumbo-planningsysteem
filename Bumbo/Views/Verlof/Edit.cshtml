@using Bumbo.ViewModels
@model TimeOffRequestViewModel

@{
    ViewData["Title"] = "Edit Time Off Request";
}

<h2 class="text-center mb-4">Edit Time Off Request</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="TimeOffRequestId" type="hidden" />

                    <div id="dateFields">
                        <div class="form-group mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Reason" class="form-label"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <input asp-for="Ziek" class="form-check-input" type="checkbox" value="true" id="ziekToggle" />
                        <label asp-for="Ziek" class="form-check-label">Ziek</label>
                        <span asp-validation-for="Ziek" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Verlof.js"></script>