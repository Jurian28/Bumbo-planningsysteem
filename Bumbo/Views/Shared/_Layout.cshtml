                    <li class="dropdown-item @(Html.ViewContext.RouteData.Values["controller"].ToString() == "Template" ? "list-item-active" : "")">
                        <a asp-action="Index" asp-controller="Template" onclick="updateDropdownText('@Resource.TemplatePagina')"><i class="fa-solid fa-history"></i>@Resource.TemplatePagina</a>
                    </li>
                    <li class="dropdown-item @(Html.ViewContext.RouteData.Values["controller"].ToString() == "NormeringHistory" ? "list-item-active" : "")">
                        <a asp-action="Index" asp-controller="NormeringHistory" onclick="updateDropdownText('@Resource.NormeringenTitle')"><i class="fa-solid fa-pen-to-square"></i>@Resource.NormeringenTitle</a>
