@model Bumbo.Models.PrognoseViewModel

@using Bumbo.Resources
@{
    ViewData["Title"] = "Home Page";

    var templates = ViewData["Templates"] as List<BumboDB.Models.Template>;
    <link rel="stylesheet" href="~/css/Prognose.css" asp-append-version="true" />
}

<h2 class="Title-Prog">@Resource.PrognoseNAV</h2>
<div class="week-selector">
    <button class="btn btn-tonal" onclick="previousWeek()">&#8592;</button>
    <span id="week-number" class="week-number"> @Resource.Week </span>, <span id="year" class="year"></span>   
    <button class="btn btn-tonal" onclick="nextWeek()">&#8594;</button>
</div>

<form method="post" action="/Home/PrognosisCreated/">
