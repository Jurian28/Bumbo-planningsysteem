            <span>
                @if (Thread.CurrentThread.CurrentCulture.ToString() == "en")
                {
                    @Resource.Engels
                }
                else if (Thread.CurrentThread.CurrentCulture.ToString() == "de")
                {
                    @Resource.Duits
                }
                else if (Thread.CurrentThread.CurrentCulture.ToString() == "nl")
                {
                    @Resource.Nederlands
                }
            </span>
            <span class="dropdown-arrow">▼</span>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-lang="en">@Resource.Engels</a></li>
                <li><a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-lang="de">@Resource.Duits</a></li>
                <li><a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-lang="nl">@Resource.Nederlands</a></li>
            </ul>
        </div>
        <form method="post" action="@Url.Action("Logout", "Account")" class="logout-form">
            <button type="submit" class="logout-button">@Resource.Uitloggen</button>
        </form>
        <a asp-controller="Profile" asp-action="Index" class="profile-icon" aria-label="Profile">
            <i class="fa-solid fa-user"></i>
        </a>
    </div>
</header>

<div class="content-wrapper">
    <main class="wrapper">
        @RenderBody()
    </main>
</div>
@await RenderSectionAsync("Scripts", required: false)

<script>
    function updateDropdownText(text) {
        document.getElementById('dropdownButton').innerText = text;
    }
    
    function toggleMenu() {
        const navDrawer = document.querySelector('.navigation-drawer');
        navDrawer.classList.toggle('open');
        navDrawer.classList.toggle('closed');
        
 document.addEventListener('DOMContentLoaded', () => {
    const navDrawer = document.querySelector('.navigation-drawer');
    const hamburger = document.querySelector('.hamburger');

    // Toggle the navigation drawer on click
    const toggleMenu = () => {
        const isOpen = navDrawer.classList.contains('open');
        navDrawer.classList.toggle('open', !isOpen);
        navDrawer.classList.toggle('closed', isOpen);
    };

    // Attach event listener to the hamburger menu
    if (hamburger) {
        hamburger.addEventListener('click', toggleMenu);
    }

    // Close the menu when clicking outside of it
    document.addEventListener('click', (event) => {
        if (!navDrawer.contains(event.target) && !hamburger.contains(event.target)) {
            navDrawer.classList.remove('open');
            navDrawer.classList.add('closed');
        }
    });
});
        
    }
</script>
