            <div class="day-name-background">
                <label asp-for="SelectedTemplates[0]" class="day-name">@Resource.Maandag</label>
            </div>
            <select asp-for="SelectedTemplates[0]" class="template-button">
                @foreach (var template in templates)
                {
                    if (template.Name == "Gem. Ma")
                    {
                        <option value="@template.TemplateId" selected>@template.Name / @template.PredictedCustomers Klanten / @template.PredictedCargo Collis</option>
                    }
                    else
                    {
                        <option value="@template.TemplateId">@template.Name / @template.PredictedCustomers Klanten / @template.PredictedCargo Collis</option>
