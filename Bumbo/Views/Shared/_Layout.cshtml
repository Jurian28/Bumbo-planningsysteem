            <li class="no-dropdown-item @(Html.ViewContext.RouteData.Values["controller"].ToString() == "EmployeeRooster" ? "list-item-active" : "")">
                <a asp-action="Index" asp-controller="EmployeeRooster">
                    <i class="fa-solid fa-house"></i>
                    <span>Rooster</span>
                </a>
            </li>
            <li class="no-dropdown-item @(Html.ViewContext.RouteData.Values["controller"].ToString() == "Verlof" ? "list-item-active" : "")">
                <a asp-action="Index" asp-controller="Verlof">
                    <i class="fa-solid fa-user"></i>
                    <span>Verlof</span>
                </a>
            </li>
            <li class="no-dropdown-item @(Html.ViewContext.RouteData.Values["controller"].ToString() == "Beschikbaarheid" ? "list-item-active" : "")">
                <a asp-action="Index" asp-controller="Beschikbaarheid">
                    <i class="fa-solid fa-tasks"></i>
