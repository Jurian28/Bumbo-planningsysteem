@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<BumboDB.Models.OpeningHour>

<!DOCTYPE html>
<html>

<body>
<div class="container mt-5">
    <h2 class="header text-center mb-4">Opening Hours</h2>
    <form asp-action="Save" method="post">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                <tr>
                    <th>Day</th>
                    <th>Open Time</th>
                    <th>Close Time</th>
                </tr>
                </thead>
                <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" name="[@i].Id" value="@Model[i].Id" />
                            <span>@Model[i].Day</span>
                        </td>
                        <td><input type="time" name="[@i].OpenTime" value="@Model[i].OpenTime" class="form-control" step="1" /></td>
                        <td><input type="time" name="[@i].CloseTime" value="@Model[i].CloseTime" class="form-control" step="1" /></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
</body>
</html>